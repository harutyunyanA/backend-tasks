link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

style.
  body {
    background-color: #f8f9fa;
    font-family: Arial, sans-serif;
  }
  .form-container {
    max-width: 600px;
    margin: 50px auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
  h2 {
    text-align: center;
    margin-bottom: 30px;
  }


div(class="form-container")
  div(class="header")
      a(class ="btn btn-secondary" href="/") Home
      h2(class="mb-0") Add Post
  form(action="/addPost" method="post")
    div(class="mb-3")
      label(class="form-label" for="name") Name:
      input#name.form-control(type="text" name="name" placeholder="Enter your name" required)
    div(class="mb-3")
      label(class="form-label" for="description") Post description:
      input#description.form-control(type="text" name="description" placeholder="Enter post description" required)
    button(class="btn btn-primary w-100" type="submit") Submit

