link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
div(class="container mt-5")
    div(class="card")
        div(class="card-body")
            h4(class="card-title") #{post.name}
            p(class="card-text") #{post.description}


div(class="container mt-5")
  div(class="card shadow-sm")
    div(class="card-body d-flex justify-content-between align-items-center")
        a(class="btn btn-secondary" href="/") Home
    div(class="card-body")
      form(action="" method="post")
        div(class="mb-3")
          label(for="comment" class="form-label fw-bold") Write your comment:
          textarea(class="form-control" rows="2" id="comment" name="text" placeholder="Type your comment here..." required)
        button(type="submit" class="btn btn-primary w-100") Submit

div(class="container mt-5")
    div(class="d-flex flex-column gap-2")
        if comments.length
            each comment in comments
                div(class="card" )
                    div(class="card-body")
                        p(class="card-text") #{comment.text}
        else
            h6 0 Comments

