html
  head
    title Posts
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
      }
      h1 {
        margin: 20px 0;
        text-align: center;
        color: #333;
      }
      .posts-container {
        max-width: 800px;
        margin: 0 auto;
      }
      .card {
        margin-bottom: 15px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      .card-title {
        color: #0d6efd;
      }
  body
    .container.posts-container
      h1 Welcome 
      a(class="btn btn-primary" href="/addPost") Add Post
      h2(class="mt-4 mb-3") Posts
      div(class="d-flex flex-column")
        if data.length
          each post in data
            div(class="card")
              div(class="card-body")
                h4(class="card-title") #{post.name}
                p(class="card-text") #{post.description}
                a(href=`/post/${post.id}` class="card-link") Comments
        else
          p No posts yet.